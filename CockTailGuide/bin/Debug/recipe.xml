<recipe title="Dry Martini">
    <title>Dry Martini</title>
    <type>Classic</type>
    <ingredient quantity="2.5" measure="oz">Beefeater Gin</ingredient>
    <ingredient quantity="0.5" measure="oz">Dry vermouth</ingredient>
