        <Label Content="champagne cocktail" Grid.Column="2" Grid.Row="1" HorizontalAlignment="Left" Margin="30,103,0,0" VerticalAlignment="Top" Width="136" Height="33" FontFamily="Buxton Sketch" Foreground="White" Grid.RowSpan="2" FontSize="16"/>
        <Label Content="Cosmopolitan" Grid.Column="3" Grid.Row="1" HorizontalAlignment="Left" Margin="30,103,0,0" VerticalAlignment="Top" Width="110" Height="25" FontFamily="Buxton Sketch" Foreground="White" Grid.RowSpan="2" FontSize="16"/>
        <Label Content="erly taste of spring" Grid.Column="4" Grid.Row="1" HorizontalAlignment="Left" Margin="22,103,0,0" VerticalAlignment="Top" Width="124" Height="33" FontFamily="Buxton Sketch" Foreground="White" Grid.RowSpan="2" FontSize="16"/>
        <Label Content="Gimlet" Grid.Column="5" Grid.Row="1" HorizontalAlignment="Left" Margin="46,103,0,0" VerticalAlignment="Top" Width="70" Height="25" FontFamily="Buxton Sketch" Foreground="White" Grid.RowSpan="2" FontSize="16"/>
        <Label Content="kamikaze" Grid.Column="7" Grid.Row="1" HorizontalAlignment="Left" Margin="26,103,0,0" VerticalAlignment="Top" Width="70" Height="25" FontFamily="Buxton Sketch" Foreground="White" Grid.RowSpan="2" FontSize="16"/>
        <Label Content="Lagerita" Grid.Column="2" Grid.Row="2" HorizontalAlignment="Left" Margin="46,103,0,0" VerticalAlignment="Top" Width="70" Height="34" FontFamily="Buxton Sketch" Foreground="White" Grid.RowSpan="2" FontSize="16"/>
        <Label Content="manhattan" Grid.Column="3" Grid.Row="2" HorizontalAlignment="Left" Margin="46,103,0,0" VerticalAlignment="Top" Width="70" Height="25" FontFamily="Buxton Sketch" Foreground="White" Grid.RowSpan="2" FontSize="16"/>
        <Label Content="Mojito" Grid.Column="4" Grid.Row="2" HorizontalAlignment="Left" Margin="46,103,0,0" VerticalAlignment="Top" Width="70" Height="34" FontFamily="Buxton Sketch" Foreground="White" Grid.RowSpan="2" FontSize="16"/>
        <Label Content="point reyes punch" Grid.Column="5" Grid.Row="2" HorizontalAlignment="Left" Margin="18,103,0,0" VerticalAlignment="Top" Width="120" Height="34" FontFamily="Buxton Sketch" Foreground="White" Grid.RowSpan="2" FontSize="16"/>
        <Label Content="Rooster tail" Grid.Column="7" Grid.Row="2" HorizontalAlignment="Left" Margin="10,103,0,0" VerticalAlignment="Top" Width="100" Height="25" FontFamily="Buxton Sketch" Foreground="White" Grid.RowSpan="2" FontSize="16"/>
        <Label Content="sex on the beach" Grid.Column="2" Grid.Row="3" HorizontalAlignment="Left" Margin="18,103,0,-7" VerticalAlignment="Top" Width="120" Height="25" FontFamily="Buxton Sketch" Foreground="White" FontSize="16"/>
        <Label Content="smashing pumpkin" Grid.Column="3" Grid.Row="3" HorizontalAlignment="Left" Margin="0,103,0,-7" VerticalAlignment="Top" Width="140" Height="25" FontFamily="Buxton Sketch" Foreground="White" FontSize="16"/>
        <Label Content="tough to hear" Grid.Column="4" Grid.Row="3" HorizontalAlignment="Left" Margin="40,103,0,-7" VerticalAlignment="Top" Width="90" Height="25" FontFamily="Buxton Sketch" Foreground="White" FontSize="16"/>
        <Label Content="screwdriver" Grid.Column="5" Grid.Row="3" HorizontalAlignment="Left" Margin="30,103,0,-7" VerticalAlignment="Top" Width="88" Height="25" FontFamily="Buxton Sketch" Foreground="White" FontSize="16"/>
        <Label Content="Dry Martini" Grid.Column="7" Grid.Row="3" HorizontalAlignment="Left" Margin="10,103,0,-7" VerticalAlignment="Top" Width="86" Height="25" FontFamily="Buxton Sketch" Foreground="White" FontSize="16"/>
        <Button x:Name="FacebookPost" Content="Share on FB" Grid.Column="8" HorizontalAlignment="Left" Margin="10,80,0,0" Grid.Row="3" VerticalAlignment="Top" Width="117" Click="FacebookPost_Click">
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="0"/>
                    <GradientStop Color="#FF894040" Offset="1"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>
        <Button x:Name="Video" Content="View Making Video" HorizontalAlignment="Left" Margin="125,133,0,-47" Grid.Row="3" VerticalAlignment="Top" Width="164" Click="Video_Click">
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="0"/>
                    <GradientStop Color="#FF894040" Offset="1"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>
        <Label Content="CockTail Recipe" Grid.Row="0" HorizontalAlignment="Left" Margin="103,87,0,0" VerticalAlignment="Top" Width="151" Height="31" FontFamily="Buxton Sketch" Foreground="White" FontSize="20"/>
        <Label Content="CockTail List" Grid.Row="0" HorizontalAlignment="Left" Margin="104,18,0,81" Width="151" FontFamily="Buxton Sketch" Foreground="White" FontSize="20"/>
        <Label Content="Recipes" Grid.Row="0" HorizontalAlignment="Left" Margin="10,0,0,25" VerticalAlignment="Bottom" Width="95" Height="37" FontFamily="Buxton Sketch" Foreground="White" FontSize="24" Grid.Column="8"/>
        <Button Content="Main Menu" Grid.Column="8" HorizontalAlignment="Left" Margin="10,18,0,0" VerticalAlignment="Top" Width="95" Click="Button_Click_20">
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="0"/>
                    <GradientStop Color="#FF894040" Offset="1"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>




    </Grid>
</Window>
